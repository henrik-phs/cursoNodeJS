    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h1>Editar Postagem</h1>
<hr>

<div class="card card-body">
    <form action="/admin/postagens/edit" method="post">
        <input type="hidden" name="id" value="{{postagem._id}}">

        <div class="form-group mt-2">
            <label for="nome">Título:</label>
            <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagem.titulo}}">
        </div>

        <div class="form-group mt-2">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagem.slug}}">
        </div>

        <div class="form-group mt-2">
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagem.descricao}}">
        </div>

        <div class="form-group mt-2">
            <label for="conteudo">Conteúdo:</label>
            <textarea rows="5" name="conteudo" id="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
        </div>

        <div class="form-group mt-2">
            <label for="descricao">Categoria:</label><br>
            <select name="categoria" id="categoria" class="form-control">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-outline-success">Editar postagem</button>
        </div>
    </form>
</div>